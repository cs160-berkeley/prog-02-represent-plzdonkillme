<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity" tools:deviceIds="wear_round"
    android:background="@color/app_green">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px">
        <TextView
            android:id="@+id/dem_vote"
            android:layout_width="200px"
            android:layout_height="40px"
            android:background="@color/blue"/>
        <TextView
            android:id="@+id/dem_per"
            android:layout_height="40px"
            android:layout_width="wrap_content"
            android:text="66%"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="5px"/>
        <TextView
            android:id="@+id/rep_vote"
            android:layout_width="80px"
            android:layout_height="40px"
            android:background="@color/red"
            android:layout_below="@id/dem_vote"/>
        <TextView
            android:id="@+id/rep_per"
            android:layout_height="40px"
            android:layout_width="wrap_content"
            android:text="34%"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="5px"
            android:layout_below="@id/dem_vote"/>
        <TextView
            android:layout_height="40px"
            android:layout_width="wrap_content"
            android:text="Obama"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="5px"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_height="40px"
            android:layout_width="wrap_content"
            android:text="Romney"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="5px"
            android:layout_alignParentRight="true"
            android:layout_below="@id/dem_vote"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/county"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:text="Alameda"
        android:textSize="30px"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"/>
    <TextView
        android:id="@+id/state"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:text="CA"
        android:textSize="30px"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/county"/>
    <TextView
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:text="2012 Presidential Vote"
        android:textSize="30px"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30px"/>
</RelativeLayout>