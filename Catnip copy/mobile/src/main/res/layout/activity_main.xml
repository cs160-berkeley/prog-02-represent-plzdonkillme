<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="158px"
    android:paddingRight="158px"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "@string/app_name"
        android:textSize = "154px"
        android:gravity="center"
        android:layout_marginTop="121px"/>

    <ImageView
        android:layout_width="320px"
        android:layout_height="320px"
        android:id="@+id/fred_img"
        android:src="@drawable/cuteimg1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="394px" />

    <ImageView
        android:layout_width="320px"
        android:layout_height="320px"
        android:id="@+id/lexy_img"
        android:src="@drawable/cuteimg2"
        android:layout_alignTop="@+id/fred_img"
        android:layout_alignParentEnd="true" />
    <EditText
        android:id="@+id/zip"
        android:layout_width="450px"
        android:layout_height="127px"
        android:hint="ZIP CODE"
        android:layout_marginTop="899px"
        android:textSize="60px"
        android:inputType="number"
        android:background="@drawable/graybox"/>
    <Button
        android:id="@+id/go"
        android:layout_width="210px"
        android:layout_height="127px"
        android:layout_alignTop="@id/zip"
        android:layout_alignParentEnd="true"
        android:text="Go!"
        android:textSize="60px"
        android:background="@drawable/go_button"
        android:onClick="useZipCode"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="127px"
        android:layout_marginTop="1095px"
        android:layout_alignStart="@id/zip"
        android:layout_alignEnd="@id/go"
        android:text="Use Current Location"
        android:textSize="60px"
        android:background="@drawable/curr_loc_button"
        android:onClick="useCurrentLocation"/>

</RelativeLayout>
